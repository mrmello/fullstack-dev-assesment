{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
  "sourceType": "module",
  "ecmaVersion": 8,
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  }
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [1, "unix"],
    "quotes": [1, "single"],
    "semi": [2, "never"],
    "no-var": 0,
    "no-console": 1
  }
}